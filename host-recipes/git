name=git
from_source=git
revision=1

configure() {
    # git does not seem to support out-of-tree builds
    cp -r "${source_dir}"/. ./

    ./configure CFLAGS="${common_cflags}" CXXFLAGS="${common_cflags}" --prefix="${prefix}"
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install
}
