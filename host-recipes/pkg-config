name=pkg-config
from_source=pkg-config
revision=1
imagedeps="base-devel"

configure() {
    "${source_dir}"/configure CFLAGS="${common_cflags}" CXXFLAGS="${common_cflags}" --prefix="${prefix}" --with-internal-glib
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
