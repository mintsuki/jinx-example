name=python
from_source=python
revision=1

configure() {
    "${source_dir}"/configure CFLAGS="${common_cflags}" CXXFLAGS="${common_cflags}" --prefix="${prefix}"
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install
    ln -sf "${prefix}"/bin/python3 "${dest_dir}${prefix}"/bin/python
}
