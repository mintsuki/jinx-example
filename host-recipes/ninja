name=ninja
from_source=ninja
revision=1
hostdeps="python"

configure() {
    cp -r "${source_dir}"/. ./
}

build() {
    CFLAGS="${common_cflags}" CXXFLAGS="${common_cflags}" ./configure.py --bootstrap
}

install() {
    mkdir -p "${dest_dir}${prefix}"/bin
    cp ninja "${dest_dir}${prefix}"/bin/
}
