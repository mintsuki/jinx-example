name=meson
from_source=meson
revision=1
hostrundeps="python"

configure() {
    true
}

build() {
    true
}

install() {
    mkdir -p "${dest_dir}${prefix}"/share/meson
    cp -r "${source_dir}"/. "${dest_dir}${prefix}"/share/meson/
    mkdir -p "${dest_dir}${prefix}"/bin
    ln -sf "${prefix}"/share/meson/meson.py "${dest_dir}${prefix}"/bin/meson
}
